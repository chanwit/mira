MACHINE_HOME = "c:/test"
REPO = "chanwit"
TAG  = "v1"

include 'digitalocean.templates'

services = [worker, webui, redis, hasher, rng]

task(up) {
	docker service create (
		name:  nginx,
		image: nginx,
	)
}

task(down) {
	docker service rm nginx
}

task(provision) {
	20.times {
		docker machine create DO_1GB_SGP, "dragon-$it"
	}
}

task(clean) {
	20.times {
		docker machine rm "dragon-$it"
	}
}

